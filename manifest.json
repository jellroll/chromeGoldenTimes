{
"manifest_version": 2,
    "name": "Golden Times",
    "description": "Replace politician names with names of Golden Girls characters",
    "version": "1.0",

  "permissions": [
    "activeTab",
    "http://*/",
    "tabs"
  ],
    
        "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    
    "background": { "scripts": ["background.js"] },
    
    "browser_action": {
      "default_icon": "sun_dimmed_48.png",
      "default_title": "Golden Times"
    }


}