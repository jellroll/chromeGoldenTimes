{
    
    "manifest_version": 2,
    "name": "Golden Times",
    "description": "Replace politician names with names of Golden Girls characters",
    "version": "1.0",
  "permissions" : [
    "declarativeContent",
      "activeTab",
      "tabs",
      "https://*/*"
  ],

    "background": { "scripts": ["jquery-3.2.1.min.js", "background.js"],
                   "persistent": false},
    "page_action": {
        "default_icon": "sun_dimmed_48.png",
        "default_title": "Golden Times"
    },
    "icons": {
        "16": "sun_square_16.png",
        "48": "sun_square_48.png",
        "128": "sun_square_128.png" },
    "web_accessible_resources": ["images/*.jpg"]
    
}